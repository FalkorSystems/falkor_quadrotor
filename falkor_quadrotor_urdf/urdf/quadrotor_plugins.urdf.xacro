<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find falkor_quadrotor_urdf)/urdf/base_sensors.urdf.xacro" />
  <xacro:include filename="$(find falkor_quadrotor_urdf)/urdf/quadrotor_simple_controller.urdf.xacro" />

  <!-- Quadrotor Gazebo Plugins -->
  <xacro:macro name="quadrotor_plugins">
    <canonicalBody>base_link</canonicalBody>
    <base_sensors tf_prefix="/robot" />
    <quadrotor_controller/>
  </xacro:macro>
</robot>
